name = input("Enter your fathers's name:")
address=input("Enter your father's address:")
birthyear = int(input("Enter your father's birthyear:"))

age = 2023 - birthyear

print("--------------------------")
print("Your Information")
print(f"father's name: {name}")
print(f"father's address: {address}")
print(f"father's age: {age}")

